
{% if section.settings.section-title != black %}
  <div class="header-container">
    <h1>{{section.settings.section-title | escape}}</h1>
  </div>
{% endif %}


  <div class="information-columns-container">
    {% for block in section.blocks %}
      <div class="information-columns-item">
        <img class="information-columns-img" src="{{block.settings.image1| img_url:'master'}}"/> 
        <div class="information-columns-textblock">
          <h3>{{block.settings.title1}}</h3>
          {{block.settings.rich-text1}}
        </div>  
      </div>
    {% endfor %}
  </div>



  <div class="slick-carousel">
    {% for block in section.blocks %}
      <div class="information-columns-item">
        <img class="information-columns-img" src="{{block.settings.image1| img_url:'master'}}"/> 
        <div class="information-columns-textblock">
          <h3>{{block.settings.title1}}</h3>
          {{block.settings.rich-text1}}
        </div>  
      </div>
    {% endfor %}
  </div>


{% schema %}
  {
  	"name": "Collumns with Image",
  	"settings": [{
  		"type": "text",
  		"id": "section-title",
  		"label": "Section Title"
  	}],
  	"blocks": [{
  		"name": "Text Block",
  		"type": "text_block",
  		"settings": [{
  				"type": "text",
  				"id": "title1",
  				"label": "Paragraph Title 1"
  			},
  			{

  				"type": "richtext",
  				"id": "rich-text1",
  				"label": "Rich Text 1",
  				"default": "<p>Type here</p>"

  			},
  			{
  				"type": "image_picker",
  				"id": "image1",
  				"label": "image 1"
  			}
  		]

  	}],
  	"presets": [{
  		"name": "Collumns with Image",
  		"category": "Advanced"
  	}]
  }
{% endschema %}

